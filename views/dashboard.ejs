            <% if (locals.result){ %>
                <a href="/createSurvey/5" class="col-md-4 mb-4 createsurveybanner" style="text-decoration: none;">
                    <div class="card p-3 mb-2 createsurveybanner" style="background-color: rgba(255, 248, 220, 0.87);">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <div class="icon"> </div>
                                <div class="ms-2 c-details">
                                    <h6 class="mb-0"></h6> <span></span>
                                </div>
                            </div>
                            <div class="badge"> <span>New</span> </div>
                        </div>
                        <div class="mt-5">
