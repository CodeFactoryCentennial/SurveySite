<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/survey.css">

    <title>
        <%= title %> - Codefactory Survey
    </title>
</head>

<body style="background-color: #c19242; height: 100vh;" class="bg-design">


    <div class="container mt-3 mb-1 pb-1">
        <div>
            <div class="bordermb-4 border-2 rounded d-flex p-2 align-items-center" style="font-size: 20px; background-color: black
            ">
                <div class="spinner-grow text-warning me-auto" role="status" aria-hidden="true"></div>
                <strong class="text-center text-white mx-2">
                    <%= data.name %>
                </strong>
                <div class="spinner-grow text-warning ms-auto" role="status" aria-hidden="true"></div>
            </div>
        </div>
        <div style="width: 100%;" class="mt-1 d-flex flex-row-reverse">
            <p class="font-weight-bold text-right text-white">@CodeFactorySurvey</p>
        </div>

        <hr class="mx-auto mt-1" style="border: 1px solid white ;" />


        <form method="post" action="/submitsurvey/<%= data._id %>">

            <% var i=0 %>
                <% data.questions.forEach(result=> { %>
                    <% i++ %>

                        <div class="border p-3 mb-2 border-2 rounded p-2 mx-auto"
                            style="background-color: rgba(255, 255, 255, 0.678)">
                            <p style="font-size: 18px; font-family: Verdana, Geneva, Tahoma, sans-serif; font-weight: 600;"
                                class="text-black">
                                <span class="border me-1 border-2 border-white rounded queno">
                                    <%= i %>
                                </span>
                                <%= result.question %>
                            </p>
                            <div class="container radiogrp">
                                <% var option=result.options %>

                                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2">
                                        <div class="col mb-2">
                                            <input required type="radio" class="btn-check" style="width: 100%;"
                                                name="que<%= i %>answer" value="0" id="que<%= i %>option1id"
                                                autocomplete="off">
                                            <label style="width: 100%;" class="btn btn-outline-danger"
                                                for="que<%= i %>option1id">
                                                <%= option[0] %>
                                            </label>

                                        </div>

                                        <div class="col mb-2">
                                            <input required type="radio" class="btn-check" style="width: 100%;"
                                                name="que<%= i %>answer" value="1" id="que<%= i %>option2id"
                                                autocomplete="off">
                                            <label style="width: 100%;" class="btn btn-outline-success"
                                                for="que<%= i %>option2id">
                                                <%= option[1] %>
                                            </label>

                                        </div>

                                        <div class="col mb-2">
                                            <input required type="radio" class="btn-check" style="width: 100%;"
                                                name="que<%= i %>answer" value="2" id="que<%= i %>option3id"
                                                autocomplete="off">
                                            <label style="width: 100%;" class="btn btn-outline-info"
                                                for="que<%= i %>option3id">
                                                <%= option[2] %>
                                            </label>

                                        </div>

                                        <div class="col">
                                            <input required type="radio" class="btn-check" style="width: 100%;"
                                                name="que<%= i %>answer" value="3" id="que<%= i %>option4id"
                                                autocomplete="off">
                                            <label style="width: 100%;" class="btn btn-outline-warning"
                                                for="que<%= i %>option4id">
                                                <%= option[3] %>
                                            </label>

                                        </div>
                                    </div>
                            </div>
                        </div>

                        <hr class="mx-auto" style="border: 1px solid white ;" />

                        <% }); %>

                            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2">

                                <div class="col">
                                    <button class="btn btn-hover btn-dark mb-2" style="width: 100%;"
                                        type="submit">Submit</button>
                                </div>

                                <div class="col">
                                    <button class="btn btn-hover btn-light" style="width: 100%;"
                                        type="reset">Reset</button>
                                </div>

                            </div>
        </form>

        <hr class="mx-auto" style="border: 1px solid white ;" />



    </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>

    <script src="/reload/reload.js"></script>
    <script src="/javascripts/script.js"></script>

</body>

</html>