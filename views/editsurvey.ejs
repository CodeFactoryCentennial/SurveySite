<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/survey.css">

    <title>
        Edit Survey: <%= surveyData.name %>
    </title>
</head>

<body style="background-color: #c19242; height: 100vh;" class="bg-design">


    <div class="container">


        <form class="container pt-4 pb-5" method="post" action="/update/<%= surveyData._id %>/<%= noOfQues %>">

            <div class="row border border-2 rounded mb-3 pb-2 pt-2" style="background-color: rgba(231, 45, 20, 0.418);">
                <div class="form-floating border-2 rounded">
                    <textarea class="form-control" required placeholder="Name of the survey"
                        name="surveytitle" ><%= surveyData.name %></textarea>
                    <label for="floatingTextarea">&nbsp;&nbsp;Name of the Survey?</label>
                </div>

            </div>



            <% var i = 0 %>
            <% surveyData.questions.forEach((data) => { %>
                <% i++ %>
                <div class="row border border-2 rounded mb-2 pt-1"
                    style="background-color: rgba(255, 255, 255, 0.418);">
                    <div class="mb-2 mt-1">

                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Question ?" id="que<%= i %>label"
                                name="que<%= i %>label" style="height: auto"><%= data.question %></textarea>
                            <label for="que<%= i %>label">What is the Question <%= i %>?</label>
                        </div>
                    </div>
                    <div class="row mb-1 w-100">
                        <div class="col">
                            <div class="input-group mb-1">
                                <span class="input-group-text">A</span>
                                <textarea type="text" rows="1" required name="que<%= i %>option1"
                                    class="form-control"><%= data.options[0] %></textarea>
                            </div>
                        </div>
                        <div class="col">
                            <div class="input-group mb-1">
                                <span class="input-group-text">B</span>
                                <textarea type="text" rows="1" required name="que<%= i %>option2"
                                    class="form-control"><%= data.options[1] %></textarea>
                            </div>

                        </div>
                    </div>

                    <div class="row mb-2 w-100">
                        <div class="col">
                            <div class="input-group mb-1">
                                <span class="input-group-text">C</span>
                                <textarea type="text" rows="1" required name="que<%= i %>option3"
                                    class="form-control"><%= data.options[2] %></textarea>
                            </div>
                        </div>
                        <div class="col">
                            <div class="input-group mb-1">
                                <span class="input-group-text">D</span>
                                <textarea type="text" rows="1" required name="que<%= i %>option4"
                                    class="form-control"><%= data.options[3] %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>

                    <div style="height: 10px;"></div>
                    <div class="d-grid gap-2 mt-2">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-pen"></i> Update this
                            Survey</button>
                        <a href="/dashboard" class="btn btn-danger" type="button"><i class="fas fa-times"></i> Close</a>
                    </div>


        </form>

    </div>











    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>

    <script src="/reload/reload.js"></script>
    <script src="/javascripts/script.js"></script>

</body>

</html>