<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/style.css">


    <title>
        <%= surveyData.name %>
    </title>
</head>

<body style="background-color: #c19242; height: 100%;" class="bg-design">


    <div>

        <%- include('partials/navbar'); %>

    </div>

    <div class="container" style="padding-top: 5.1em; padding-bottom: 3.1em;">

        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Survey Information</h4>
            <hr>
            <ul>
                <li><b>Survey Id:</b>
                    <%= surveyData._id %>
                </li>
                <li><b>Survey link:</b> <a id="sample"
                        href="http://codefactorysurvey.herokuapp.com/<%= surveyData.slug %>">http://codefactorysurvey.herokuapp.com/
                        <%= surveyData.slug %>
                    </a></li>
                <li><b>Number of Questions:</b>
                    <%= noOfQues %>
                </li>
                <li><b>Date Published:</b>
                    <%= date.toDateString() %>
                </li>
            </ul>
            <hr>
            <div class="d-flex">
                <button type="button" onclick="CopyToClipboard('sample');return false;"
                    class="btn btn-primary ml-auto">Copy Survey Link</button>
            </div>
        </div>

        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Statistics</h4>
            <hr>
            <ul>
                <li><b>Number of people completed this survey:</b> <%= surveyData.totalsubmissions %></li>
            </ul>

            <hr>
        </div>

        <div class="alert alert-danger mb-5" role="alert">
            <h4 class="alert-heading text-center"><b>Control Center</b></h4>

            <div class="row">
                <button onclick="location.href='/';" class="btn mb-2 btn-primary col" style="margin-right: 5px;">Go Back to Dashboard</button>
                
            </div>
            <div class="row">
                <button class="btn btn-warning col" style="margin-right: 5px;">Edit Survey</button>
                <form method="get" class="col" action="/delete/<%= surveyData._id %>"><button type="submit" style="width: 100%;"
                    class="btn btn-danger">Delete</button>
                </form>
            </div>
            

        </div>

    </div>






    <script>
        function CopyToClipboard(id) {
            var r = document.createRange();
            r.selectNode(document.getElementById(id));
            window.getSelection().removeAllRanges();
            window.getSelection().addRange(r);
            document.execCommand('copy');
            window.getSelection().removeAllRanges();
        }
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>

    <script src="/reload/reload.js"></script>
    <script src="/javascripts/script.js"></script>

</body>

</html>